<Bindings>
    <Layer name="SI_KEYBINDINGS_LAYER_GENERAL">
        <Category name="|c00FF00FCO |cFFFF00ChatTabBrain|r">
            <Action name="FCO_CHAT_HIDE">
                <Down>
                    if CHAT_SYSTEM then
                    	if not CHAT_SYSTEM:IsMinimized() then CHAT_SYSTEM:Minimize() end
                    end
                </Down>
            </Action>
            <Action name="FCO_CHAT_SHOW">
                <Down>
                    if CHAT_SYSTEM then
                    	if CHAT_SYSTEM:IsMinimized() then CHAT_SYSTEM:Maximize() end
                    end
                </Down>
            </Action>
            <Action name="FCO_CHAT_TOGGLE">
                <Down>
                    if CHAT_SYSTEM then
                        if not CHAT_SYSTEM:IsMinimized() then
                            CHAT_SYSTEM:Minimize()
                        else
                            CHAT_SYSTEM:Maximize()
                        end
                    end
                </Down>
            </Action>
            <Action name="FCO_CHAT_TAB_CLEAR">
                <Down>
                    FCOCTB.ClearChatBuffer()
                </Down>
            </Action>
            <Action name="FCO_CHAT_TABS_LEFT">
                <Down>
                    FCOCTB.CycleChatTab("-")
                </Down>
            </Action>
            <Action name="FCO_CHAT_TABS_RIGHT">
                <Down>
                    FCOCTB.CycleChatTab("+")
                </Down>
            </Action>
            <Action name="FCO_CHAT_TABS_TO_TAB_1">
                <Down>
                    FCOCTB.CycleChatTab(1)
                </Down>
            </Action>
            <Action name="FCO_CHAT_TABS_TO_TAB_2">
                <Down>
                    FCOCTB.CycleChatTab(2)
                </Down>
            </Action>
            <Action name="FCO_CHAT_TABS_TO_TAB_3">
                <Down>
                    FCOCTB.CycleChatTab(3)
                </Down>
            </Action>
            <Action name="FCO_CHAT_TABS_TO_TAB_4">
                <Down>
                    FCOCTB.CycleChatTab(4)
                </Down>
            </Action>
            <Action name="FCO_CHAT_TABS_TO_TAB_5">
                <Down>
                    FCOCTB.CycleChatTab(5)
                </Down>
            </Action>
            <Action name="FCO_CHAT_TABS_TO_TAB_6">
                <Down>
                    FCOCTB.CycleChatTab(6)
                </Down>
            </Action>
            <Action name="FCO_CHAT_TABS_TO_TAB_7">
                <Down>
                    FCOCTB.CycleChatTab(7)
                </Down>
            </Action>
            <Action name="FCO_CHAT_TABS_TO_TAB_8">
                <Down>
                    FCOCTB.CycleChatTab(8)
                </Down>
            </Action>
            <Action name="FCO_CHAT_TABS_TO_TAB_9">
                <Down>
                    FCOCTB.CycleChatTab(9)
                </Down>
            </Action>
            <Action name="FCO_CHAT_TABS_TO_TAB_10">
                <Down>
                    FCOCTB.CycleChatTab(10)
                </Down>
            </Action>
            <Action name="FCO_CHAT_CYCLE_CHAT_CHANNEL">
                <Down>
                    FCOCTB.CycleChatChannel()
                </Down>
            </Action>
        </Category>
    </Layer>
</Bindings>
